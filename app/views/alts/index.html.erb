<p id="notice"><%= notice %></p>

<h1>Listing Alts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alts.each do |alt| %>
      <tr>
        <td><%= link_to 'Show', alt %></td>
        <td><%= link_to 'Edit', edit_alt_path(alt) %></td>
        <td><%= link_to 'Destroy', alt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

