.row
  .col.s12
    %h5.thin= t(:Alts)
    = link_to t(:Add_an_alt), new_alt_path, remote: true, class: 'btn', data: { slider_content: '#new_alt' }

.col.s12.slider#new_alt
  .col.s12
    %h5.thin= t(:Add_an_alt)
  = render partial: "alts/partials/form"

.row
  .col.s12
    %table
      %thead
        %th
        %th= t(:Name)
        %th= t(:Server)
        %th= t(:Spec)
      %tbody
      - current_user.alts.each do |alt|
        %tr
          %td= image_tag(render_thumbnail_url(alt.wow_region, alt.avatar),class: "img-table circle")
          %td= alt.wow_name
          %td= alt.wow_server
          %td= alt.wow_spec
