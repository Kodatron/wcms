= form_for @character, remote: true, format: :json, html: {class: :ajax_form} do |f|
  %div#error_explanation
    %ul#errors
  = f.hidden_field :avatar_url, value: ''
  = f.hidden_field :state, value: 1
  .input_field.col.s12
    = f.label :name
    = f.text_field :name
  .input_field.col.s6
    = f.label :wow_spec
    = f.select(:wow_spec,  Character.wow_specs.keys.to_a.map { |w| [w.humanize, w] })
  .input_field.col.s6
    = f.label :wow_class
    = f.select(:wow_class,  Character.wow_classes.keys.to_a.map { |w| [w.humanize, w] })
  .input_field.col.s6
    = f.label :wow_region
    = f.select(:wow_region,  Character.wow_regions.keys.to_a.map { |w| [w.humanize, w] })
  .input_field.col.s6
    = f.label  :wow_server
    = f.text_field :wow_server
  .input_field.col.s12
    = f.submit "Add alt", class: "btn btn-primary slider-btn"
